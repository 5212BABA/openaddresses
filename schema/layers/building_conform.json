{
    "description": "top-level building conform object definition",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "format": {
            "type": "string",
            "enum": [
                "geojson",
                "shapefile",
                "shapefile-polygon",
                "gdb"
            ]
        },
        "srs": {
            "type": "string",
            "pattern": "EPSG:[0-9]+"
        },
        "file": {
            "type": "string"
        },
        "layer": {
            "description": "specifies a layer to use in the GDB",
            "oneOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "string"
                }
            ]
        },
        "notes": {
            "type": "string"
        },
        "id": {
            "description": "unique identifier for the building",
            "oneOf": [
                {
                    "$ref": "#/definitions/base_conform_field_value"
                }
            ]
        },
        "height": {
            "description": "height of the building (from the ground) in meters",
            "oneOf": [
                {
                    "$ref": "#/definitions/base_conform_field_value"
                }
            ]
        }
    }
}
